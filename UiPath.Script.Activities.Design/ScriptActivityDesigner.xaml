<sap:ActivityDesigner x:Class="UiPath.Script.Activities.Design.ScriptActivityDesigner"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:uip="clr-namespace:UiPath.Script.Activities.Design.Controls" 
    xmlns:sap="clr-namespace:System.Activities.Presentation;assembly=System.Activities.Presentation"
    xmlns:sapv="clr-namespace:System.Activities.Presentation.View;assembly=System.Activities.Presentation"
    xmlns:sapc="clr-namespace:System.Activities.Presentation.Converters;assembly=System.Activities.Presentation">

    <sap:ActivityDesigner.Resources>
        <sapc:ArgumentToExpressionConverter x:Key="ArgumentToExpressionConverter" />
    </sap:ActivityDesigner.Resources>


    <DockPanel Width="300">
        <uip:FilePathControl ModelItem="{Binding ModelItem}"  HintText="File name. Text must be quoted" PropertyName="ScriptPath" 
                             Expression="{Binding Path=ModelItem.ScriptPath, Converter={StaticResource ArgumentToExpressionConverter}, ConverterParameter=In, Mode=TwoWay}" />

    </DockPanel>

</sap:ActivityDesigner>