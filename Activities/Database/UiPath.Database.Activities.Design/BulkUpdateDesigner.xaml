    <src:ActivityDecoratorControl Style="{StaticResource ActivityDecoratorStyle}">
        <DockPanel Width="{Binding Source={x:Static p:Resources.DefaultWidth}, Mode=OneWay}">
            <Button Height="23" Content="{x:Static p:Resources.ConfigureConnection}" DockPanel.Dock="Top" Click="ConfigureButton_Click" HorizontalAlignment="Left" />
            <StackPanel Orientation="Vertical" Width="300" Margin="0 0 0 5">

                <Label Padding="0" HorizontalAlignment="Left" VerticalAlignment="Center"
                   Margin="0, 5, 0, 0" Content="{x:Static p:Resources.BulkInsert_TableName}"
                   ToolTip="{x:Static p:Resources.BulkInsert_TableName_Description}" />
                <sapv:ExpressionTextBox Margin="0, 5, 0, 0" Expression="{Binding Path=ModelItem.TableName, Converter={StaticResource ArgumentToExpressionConverter}, Mode=TwoWay, ConverterParameter=In}"
                                    MaxLines="1" OwnerActivity="{Binding Path=ModelItem}" ExpressionType="s:String" HintText="{x:Static p:Resources.BulkInsert_TableName_Placeholder}" />
                <Label Padding="0" HorizontalAlignment="Left" VerticalAlignment="Center"
                   Margin="0, 5, 0, 0" Content="{x:Static p:Resources.BulkInsert_DataTable}"
                   ToolTip="{x:Static p:Resources.BulkInsert_DataTable_Description}" />
                <sapv:ExpressionTextBox Margin="0, 5, 0, 0" Expression="{Binding Path=ModelItem.DataTable, Converter={StaticResource ArgumentToExpressionConverter}, Mode=TwoWay, ConverterParameter=In}"
                                    MaxLines="1" OwnerActivity="{Binding Path=ModelItem}" ExpressionType="sd:DataTable" HintText="{x:Static p:Resources.BulkInsert_DataTable_Placeholder}" />
                <Label Padding="0" HorizontalAlignment="Left" VerticalAlignment="Center"
                   Margin="0, 5, 0, 0" Content="{x:Static p:Resources.BulkUpdate_ColumnNames}"
                   ToolTip="{x:Static p:Resources.BulkInsert_TableName_Description}" />
                <sapv:ExpressionTextBox Margin="0, 5, 0, 0" Expression="{Binding Path=ModelItem.ColumnNames, Converter={StaticResource ArgumentToExpressionConverter}, Mode=TwoWay, ConverterParameter=In}"
                                    MaxLines="1" OwnerActivity="{Binding Path=ModelItem}" ExpressionType="s:String[]" HintText="{x:Static p:Resources.BulkUpdate_ColumnNames_Placeholder}" />
            </StackPanel>
        </DockPanel>
    </src:ActivityDecoratorControl>
</sap:ActivityDesigner>
